@model IEnumerable<WebVanChuyen.Models.Shipment>
@{
    ViewData["Title"] = "Dashboard Quản lý Đơn hàng";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Mã vận đơn</th>
            <th>Người gửi</th>
            <th>Địa chỉ nhận</th>
            <th>Trạng thái</th>
            <th>Phí</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Track" asp-route-trackingNumber="@item.TrackingNumber">
                        @item.TrackingNumber
                    </a>
                </td>
                <td>@item.SenderName</td>
                <td>@item.ReceiverAddress</td>
                <td>
                    <span class="badge bg-info text-dark">@item.CurrentStatus</span>
                </td>
                <td>@item.ShippingFee.ToString("C0")</td>
                <td>
                    <a asp-action="UpdateStatus" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                        Cập nhật
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>