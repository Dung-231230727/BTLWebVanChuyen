@model WebVanChuyen.ViewModels.ShipmentUpdateStatusViewModel
@using WebVanChuyen.Models // Để sử dụng Enum

@{
    ViewData["Title"] = "Cập nhật trạng thái";
}

<h2>@ViewData["Title"]</h2>
<h4>Mã vận đơn: @Model.TrackingNumber</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="UpdateStatus" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="TrackingNumber" />

            <div class="form-group mb-3">
                <label asp-for="NewStatus" class="control-label">Trạng thái mới</label>
                <select asp-for="NewStatus" class="form-control" asp-items="Html.GetEnumSelectList<ShipmentStatus>()">
                </select>
                <span asp-validation-for="NewStatus" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Location" class="control-label">Vị trí hiện tại (Bưu cục)</label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Cập nhật" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Hủy</a>
            </div>
        </form>
    </div>
</div>